  <body>
    <h1> Create a Team and Heroes!</h1>
    <form action="/teams" method="POST">
      Team Name: <input type="text" name="team[name]">
      Team Motto: <input type="text" name="team[motto]">

      <h2>Hero 1</h2>
      Hero Name: <input id="member1_name" type="text" name="team[super_hero][][name]">
      Hero Power: <input id="member1_power" type="text" name="team[super_hero][][power]">
      Hero Biography: <input id="member1_bio" type="text" name="team[super_hero][][bio]">

      <h2>Hero 2</h2>
      Hero Name: <input id="member2_name" type="text" name="team[super_hero][][name]">
      Hero Power: <input id="member2_power" type="text" name="team[super_hero][][power]">
      Hero Biography: <input id="member2_bio" type="text" name="team[super_hero][][bio]">

      <h2>Hero 3</h2>
      Hero Name: <input id="member3_name" type="text" name="team[super_hero][][name]">
      Hero Power: <input id="member3_power" type="text" name="team[super_hero][][power]">
      Hero Biography: <input id="member3_bio" type="text" name="team[super_hero][][bio]">


      <input type="submit" name="Submit" id="submit">

    </form>
  </body>
</html>
